<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/darcula_editor_background</item>
        <!--<item name="android:background">@color/darcula_editor_background</item>-->
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="VariableDialog" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:background">@color/darcula_editor_background</item>
        <item name="colorAccent">@color/java_com_light</item>
        <!--<item name="android:layout_margin">10dp</item>-->
    </style>

    <style name="MenuButtonsSmall">
        <item name="fab_size">mini</item>
        <item name="fab_colorNormal">@color/colorAccent</item>
        <item name="fab_colorPressed">@color/colorAccentDark</item>
    </style>
    
    <style name="VariableInputLayout" parent="@android:style/TextAppearance">
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColorHint">@color/java_com_light</item>
        <item name="colorAccent">@color/java_com</item>
        <item name="colorControlNormal">@color/java_com</item>
        <item name="colorControlActivated">@color/java_com_dark</item>
    </style>

    <style name="VariableEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">#fff</item>
    </style>

</resources>
